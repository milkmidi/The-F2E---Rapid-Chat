html
  width 100%
  min-height 100%
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  font-size 100%
body
  width 100%
  scrollbar(12px, black , green)
  > img
    position absolute
    left 0
    bottom 0
    pointer-events none
  &.hidden
    overflow hidden
  &.no-scroll
    left 0
    -webkit-overflow-scrolling touch
    position fixed
    top 0
    width 100%

*, body
  font-family fontFamily
input, button, select, optgroup, textarea
  font-family fontFamily
  font-size 1rem

#app
  width 100%
  height 100%
p
  font-size 1rem
a
  text-decoration none
img
  vertical-align top

iframe[name="google_conversion_frame"]
  display none

.fade-enter-active, .fade-leave-active
  transition all .5s
  
.fade-enter, .fade-leave-to
  opacity 0

.overflow-scrolling
  -webkit-overflow-scrolling touch

.wh-100
  width 100%
  height 100%
.fill-100
  top 0
  left 0
  right 0
  bottom 0
  width 100%
  height 100%
.abs-center
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  margin auto
.flex-center
  display flex
  justify-content center
  align-items center
// https://codepen.io/bad_printer/pen/QVWjKx
.flex-align
  display flex
  margin auto
  > .content
    margin auto

.inline-align
  text-align center
  font-size 0
  &:before
    content ''
    width 0
    height 100%
    display inline-block
    vertical-align middle
  > .content
    display inline-block
    vertical-align middle